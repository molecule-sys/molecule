{
  "installedESLint": true,
  "parser": "babel-eslint",
  "extends": "airbnb",
  "ecmaFeatures": {
    "classes": true,
    "jsx": true,
  },
  "env": {
    "browser": true,
  },
  "rules": {
    "func-names": ["error", "never"],
    "global-require": 0,
    "no-undef": 0,
    "no-return-assign": 0,
    "max-len": 0,
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 0,
    "react/jsx-filename-extension": 0,
    "react/prefer-stateless-function": [ 1, { "ignorePureComponents": true } ]
  }
}
